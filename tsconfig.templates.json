{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["templates/*"],
      "@/lib/*": ["templates/*"],
      "@/utils": ["templates/utils"],
      "@/hooks/*": ["templates/*"]
    }
  },
  "include": [
    "templates/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
} 